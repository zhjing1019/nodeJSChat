{
	"compilerOptions": {
		"target": "es2015",
		"module": "es2015",
		"strict": true,
		"allowJs": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"lib": ["dom", "es2015", "es2016", "es2017"]
	},
	"include": ["src/**/*.ts", "src/**/*.vue", "test/**/*.ts"],
	"exclude": ["node_modules"]
}
